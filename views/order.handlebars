<section class="hero is-fullheight-with-navbar">
  <div class="hero-body ">
    <div class="columns">
      <div class="column">
        <image class="">
          <img src="/stylesheets/Peer2Peer Delivery Logo (1).svg">
        </image>
      </div>
      {{!--
      <div class="columns"> --}}
        <div class="column is-mobile">
          <div class="control has-icons-left has-icons-right">
            <label class=" box label has-text-black-bis">
              <div>
                <p class="is-size-1 has-text-centered">Hey {{client.first_name}}!</p>
                <p class=" is-size-3 has-text-centered">Please enter your order below. </p>
                <p class="is-size-6 has-text-centered">Your Customer ID is: <span id="client-id">{{client.id}}</span></p>
              </div>
            </label>
            {{!-- <div class="is-divider" data-content=""></div> --}}

            <p class=" label has-text-white-bis is-size-5 has-text-centered">PICK UP INFORMATION</p>
            </label>
            <form class="pickup-form">
              <input class="input block" type="text" id="pick_up_street" placeholder="Street Address">
              <input class="input block" type="text" id="pick_up_city" placeholder="City">
              <p class="control has-icons-left is-dark">
              <div class="select is-medium block" placeholder="State">
                <select id="pick_up_state">
                  <option>UT</option>
                  <option>AZ</option>
                  <option>CO</option>
                  <option>ID</option>
                  <option>NV</option>
                  <option>WY</option>
                </select>
              </div>
              <input class="input block " type="text" id="pick_up_zip" placeholder="Zip">
              <label class=" label has-text-white-bis is-size-5 has-text-centered">DROP OFF INFORMATION </label>
              <input class="input block" type="text" id="drop_off_street" placeholder="Street Address">
              <input class="input block" type="text" id="drop_off_city" placeholder="City">
              <p class="control has-icons-left is-dark">
              <div class="select is-medium block" placeholder="State">
                <select id="drop_off_state">
                  <option>UT</option>
                  <option>AZ</option>
                  <option>CO</option>
                  <option>ID</option>
                  <option>NV</option>
                  <option>WY</option>
                </select>
              </div>
              <input class="input block " type="text" id="drop_off_zip" placeholder="Zip">
              </p>

              <div class=" is-mobile block ">
                <label class=" label has-text-white-bis block"></label>
<label class=" label has-text-white-bis is-size-5 has-text-centered">PACKAGE INFORMATION </label>
                <div class="control ">
                  <textarea class="textarea" name="comment-body" placeholder="Package Details"></textarea>
                </div>
              </div>
              <input class="input" id="deliver-date" type="date">


              <div class="field ">
                <div class="control">
                  <label class="checkbox has-text-white-bis">
                    <input type="checkbox">
                    I agree to the <a href="#">terms and conditions</a>
                  </label>
                </div>
              </div>
              <div class="field is-grouped ">
                <div class="control">
                  <button class="button" type="submit">Submit</button>
                </div>
                <div class="control">
                  <button class="button"><a href="/packages">Cancel</a></button>
                </div>
                <div class="control">
                  <a id="my-packages" class="button">My Packages</a>
                </div>
              </div>
            </form>
          </div>



          {{!--
        </div> --}}

</section>
{{#if loggedIn}}
<script src="/javascript/order.js"></script>
{{/if}}